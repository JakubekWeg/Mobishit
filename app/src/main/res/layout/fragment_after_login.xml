<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:ignore="HardcodedText">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_horizontal"
        app:autoSizeTextType="uniform"
        tools:text="Witaj Jakub" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:visibility="visible">

            <TextView
                android:id="@+id/textPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proszę przeczytaj tę notkę.\n\nFajnie, że korzystasz z tej aplikacji.\nWeź po uwagę, że nie jest to oficjalna aplikacja i mogą pojawić się w niej błędy. Proszę bądź wyrozumiałym użytkownikiem i zgłaszaj błędy jeżeli tylko możesz, abym mógł je poprawić." />

            <TextView
                android:id="@+id/textSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Od teraz dostaniesz powiadomienia o nowych ocenach itd. W ustawieniach możesz też zmienić motyw aplkacji oraz włączyć powiadomienie, które pokazuje czas pozostały do końca lekcji. Polecam też widżet z planem lekcji na ekranie domowym.\n\nAplikacja wykonana przez JakubekWeg." />

            <Button
                android:id="@+id/btnFinish"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Dobra już, otwórz aplikację" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>