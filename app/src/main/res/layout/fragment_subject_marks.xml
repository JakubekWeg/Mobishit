<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlHardcoded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?backgroundSecondaryColor"
        android:elevation="5dp"
        android:orientation="vertical"
        tools:ignore="UnusedAttribute">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/subject_name"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="0px"
                android:layout_height="0px"
                android:layout_alignBottom="@id/btnViewOptions"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@id/btnViewOptions"
                android:maxLines="1"
                android:textSize="17sp"
                android:transitionName="subjectName"
                tools:ignore="UnusedAttribute"
                tools:text="Edukacja dla bezpieczeństwa" />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/btnViewOptions"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="Opcję wyświetlania"
                android:src="@drawable/ic_sort_with_white"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/averageInfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="Obliczanie..."
                android:textSize="16sp"
                tools:text="Zdobyte punkty: 128/130 (99%)" />
        </FrameLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/marksList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        tools:listitem="@layout/mark_single_list_item" />

</LinearLayout>